{
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "typeRoots": [
      "./types"
    ],
    "paths": {
      "/@/components/*": ["src/*"],
      "src/*":["src/*"]
    },
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationDir": "types",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "downlevelIteration": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "include": [
    "./src",
    "./types/*.d.ts"
  ],
}
