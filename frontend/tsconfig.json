{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "/@/components/*": ["src/*"]
    },

    /* Modules */
    "module": "commonjs",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
